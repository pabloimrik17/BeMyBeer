html(ng-app="App")
    head
        title Integrating AngularJS with NodeJS
        style(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
        script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/2.3.1/ui-bootstrap-tpls.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/2.3.1/ui-bootstrap.min.js")
        script(src="/javascripts/app.js" type="text/javascript")
    body(ng-controller="userListController",  ng-init="loadUsers()")
        nav.navbar.navbar-default
            div.container-fluid
                div.navbar-header

                div.collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li
                            a(href="#") Crear Usuario
                        li
                            a(href="#") Usuarios



    div
        label(for="username") Nombre
            input(type="text",name="username", ng-model="username")
            br
        label(for="email") Email
            input(type="text",name="email" ng-model="email")
            br
        label(for="password") Password
            input(type="text",name="password" ng-model="password")
            br

        button.btn.btn-default(ng-click="clickButton()") Click

    div
        ul(ng-repeat="item in response.data")
            li Name:{{item.username}}, Email: {{item.email}}, Registration Date: {{item.created_at | date : 'medium'}}
