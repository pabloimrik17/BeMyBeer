{
  "name": "bemybeer",
  "version": "0.1.0",
  "description": "This is a server for a RESTful API based on Nodejs to manage my beer \"drinked\" list and related information",
  "main": "dist/_server.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run && npm run build-ts && npm run tslint",
    "serve": "node dist/_server.js",
    "watch-node": "nodemon dist/_server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/_server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "coverage": "nyc --reporter=html --reporter=text _mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pabloimrik17/BeMyBeer.git"
  },
  "keywords": [
    ""
  ],
  "author": "Pablo F. Guerra",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pabloimrik17/BeMyBeer/issues"
  },
  "homepage": "https://github.com/pabloimrik17/BeMyBeer#readme",
  "dependencies": {
    "@types/express": "^4.16.0",
    "@types/lodash": "^4.14.116",
    "ajv": "^6.5.3",
    "async": "^2.6.0",
    "body-parser": "^1.18.2",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-validator": "^4.3.0",
    "lodash": "^4.17.10",
    "moment": "^2.19.3",
    "mysql": "^2.15.0",
    "mysql2": "^1.5.1"
  },
  "devDependencies": {
    "@types/mysql2": "github:types/mysql2",
    "@types/node": "^10.11.3",
    "chai": "^4.1.2",
    "chai-date-string": "^0.1.0",
    "concurrently": "^4.0.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-typescript": "^0.12.0",
    "faker": "^4.1.0",
    "istanbul": "^0.4.5",
    "knex": "^0.14.6",
    "mocha": "^4.0.1",
    "nodemon": "^1.18.4",
    "nyc": "^13.0.0",
    "sinon": "^6.3.4",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.1",
    "typescript-eslint-parser": "^20.0.0"
  }
}
