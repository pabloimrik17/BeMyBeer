{
  "name": "bemybeer",
  "version": "0.1.0",
  "description": "This is a server for a RESTful API based on Nodejs to manage my beer \"drinked\" list and related information",
  "main": "dist/server.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run && npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles ./src/test",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "postinstall": "npm run build-ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pabloimrik17/BeMyBeer.git"
  },
  "keywords": [
    ""
  ],
  "author": "Pablo F. Guerra",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pabloimrik17/BeMyBeer/issues"
  },
  "homepage": "https://github.com/pabloimrik17/BeMyBeer#readme",
  "dependencies": {
    "@types/express": "^4.16.0",
    "@types/faker": "^4.1.4",
    "@types/lodash": "^4.14.116",
    "ajv": "^6.5.3",
    "body-parser": "^1.18.2",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-validator": "^4.3.0",
    "inversify": "^5.0.1",
    "lodash": "^4.17.10",
    "moment": "^2.19.3",
    "mysql2": "^1.6.1",
    "reflect-metadata": "^0.1.12"
  },
  "devDependencies": {
    "@types/jest": "^23.3.5",
    "@types/mysql2": "github:types/mysql2",
    "@types/nock": "^9.3.0",
    "@types/node": "^10.11.3",
    "@types/supertest": "^2.0.6",
    "concurrently": "^4.0.1",
    "faker": "^4.1.0",
    "jest": "^23.6.0",
    "jest-express": "^1.9.0",
    "knex": "^0.14.6",
    "nock": "latest",
    "nodemon": "^1.18.4",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "typescript": "^3.1.1"
  }
}
